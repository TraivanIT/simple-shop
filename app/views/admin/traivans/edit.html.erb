<div class="card" style="height:  550px;">
  <div class="card-header">
    <h1 class="text-center">Edit Administrator User</h1>
  </div>
  <div class="card-body">
    <%=  form_for [:admin, @traivan] do |f|%>
      <%if @traivan.errors.any? %>
        <div class="text-warning">
          <h2><%= pluralize(@traivan.errors.count, "error")%> from being edit adminstrator user</h2>
          <ol>
            <% @traivan.errors.full_messages.each do |msg|%>
              <li><%= msg%></li>
            <% end %>
          </ol>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :fullname%>
        <%= f.text_field :fullname, class: "form-control"%>
      
      </div>

      <div class="form-group">
        <%= f.label :username%>
        <%= f.email_field :username, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :password%>
        <%= f.password_field :password, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Administrator', class: "btn btn-success"%>
      </div>


    <% end %>
  </div>
</div>
