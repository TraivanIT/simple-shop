<div class="traivan-inner bg-white">
  <h1>Administrator</h1>
  <hr>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>#</th>
        <th>Fullname</th>
        <th>Username</th>
        <th>Created</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @traivans.each do |traivan|%>
      <tr>
        <td><%= traivan.id%></td>
        <td><%= traivan.fullname%></td>
        <td><%= traivan.username%></td>
        <td><%= time_ago_in_words traivan.created_at%></td>
        <td>
            <%= link_to 'Edit', edit_admin_traivan_path(traivan) , class: "btn btn-danger btn-sm"%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
</div><!--traivan-inner-->
