<section class="h-100">
  <header class="container h-100">
    <div class="d-flex align-items-center justify-content-center h-100">
      <div class="d-flex flex-column" style="width: 500px;">
        <div class="card ">
          <div class="card-header">
            <h1 class="text-center">Login</h1>
          </div>
          <div class="card-body">
            <%= form_tag admin_sessions_path do %>
             

              <div class="form-group">
                <%= label_tag :username%>
                <%= email_field_tag :username , params[:username] ,class: "form-control"%>
              </div>

              <div class="form-group">
                <%= label_tag :password%>
                <%= password_field_tag :password, nil ,class: "form-control"%>
              </div>

              <div class="form-group">
               
                <%= submit_tag 'Login', class: "btn btn-primary btn-block"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </header>
</section>