<div class="traivan-inner bg-white">
  <div class="float-left"><h3>List products</h3></div>
  <div class="float-right"> <%= link_to 'New Product', new_admin_product_path , class: "btn btn-primary btn-sm" %></div>

  <table class="table table-hover table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>price</th>
        <th>Status</th>
        <th>created</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product|%>
      <tr>
        <td><%= product.id%></td>
        <td><%= product.title%></td>
        <td><%= number_to_currency product.price%></td>
        <td><%= link_to product.status, toggle_status_admin_product_path(product) %></td>
        <td><%= time_ago_in_words product.created_at%></td>
        <td>
          <%= link_to 'show', admin_product_path(product) , class: "text-success "%>
          <%= link_to 'edit', edit_admin_product_path(product) , class: "text-warning "%>
          <%= link_to 'delete', admin_product_path(product), method: :delete, data: {confirm: 'Are you sure?'} , class: "text-danger "%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @products, theme:  'twitter-bootstrap-4', pagination_class: "pagination-sm"%>

</div>

